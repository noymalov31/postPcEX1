<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ex1.noy.ron.MainActivity"
    >
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/list"
        android:layout_marginBottom="80dp"></ListView>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chatForm">

        <ImageButton
            android:id="@+id/bsend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="31dp"
            android:layout_marginEnd="18dp"
            android:src="@drawable/ic_button"
            android:tint="@android:color/holo_blue_light"
            tools:backgroundTintMode="screen"
            android:layout_gravity="bottom"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chat"
            android:hint="Enter Message Here..."
            android:layout_alignTop="@+id/bsend"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:inputType="textImeMultiLine"
            android:ems="10"
            android:layout_toLeftOf="@+id/bsend"
            android:layout_gravity="bottom"/>
    </RelativeLayout>
</RelativeLayout>
